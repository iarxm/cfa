#!/bin/sh

xset r rate 120 120 &
xrdb -I${HOME}/.config .config/X11/xresources 2>/dev/null &
feh --no-fehbg --bg-max "${BGX_FEH}" &

{ 
    sleep 2
    notify-send -i display \
        "x setup:" \
        "autorandr: $(autorandr --current) \nxrandr: \n$(xrandr --listactivemonitors)"
} &

if ! $(which systemctl | grep "not found")
then
    systemctl --user import-environment DISPLAY GNUPGHOME PATH
    systemctl --user start graphical.target
    systemctl --user start unclutter.service
    systemctl --user start xbar.service
    #systemctl --user start picom.service
else
    picom &
    unclutter &
    dunst &
fi

# non-xorg
#udiskie &
